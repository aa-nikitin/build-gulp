//- -- Вывод чекбокса --
        - имя класса,
        - id чекбокса

mixin checkbox(className,idName) 
    label.checkbox
        input(id=`${idName}` class=`${className}__input` type="checkbox" name=`${idName}`)
        span(class=`${className}__custom`)
        span(class=`${className}__label`) 
            block



//- -- Вывод полей --
        - имя класса формы,
        - массив значений[0-класс поля, 1-имя на русском, 2-id, 3-тип, 4-класс иконки,5-значения], 
        - типы(text,checkbox,textarea,button)
        - тип вывода имени(0-в div-е; 1-в placeholder-е)
    )  

mixin fields-all(className,items,$typeName) 
    each field,key in items   
        if (field[3] === 'text')  
            div(class=`${field[0]} ${className}__${field[0]} ${className}__${field[2]}-box`)
                if ($typeName === 0)
                    div(class=`${field[0]}__name`) #{field[1]}
                input(class=`${field[0]}__edit ${field[0]}_${field[2]}` id=`${className}-${field[2]}` name=`${className}-${field[2]}` type="text" placeholder=(($typeName==1) ? `${field[1]}` : ``))
                if (field[4])
                    div(class=`${field[0]}__icon icon-${field[4]}`)
        if (field[3] === 'checkbox') 
            div(class=`${field[0]} ${className}__${field[0]} ${className}__${field[2]}-box`)
                label.checkbox
                    input(id=`${className}-${field[2]}` data-value=`${field[5]}` class=`${field[0]}__input` type="checkbox" name=`${className}-${field[2]}`)
                    span(class=`${field[0]}__custom`)
                    span(class=`${field[0]}__label`) 
                        | !{field[1]}
        if (field[3] === 'textarea')  
            div(class=`${field[0]} ${className}__${field[0]} ${className}__${field[2]}-box`)
                if ($typeName === 0)
                    div(class=`${field[0]}__name`) #{field[1]}
                textarea(class=`${field[0]}__edit  ${field[0]}_${field[2]}` id=`${className}-${field[2]}` name=`${className}-${field[2]}` type="text" placeholder=(($typeName==1) ? `${field[1]}` : ``))
                if (field[4])
                    div(class=`${field[0]}__icon icon-${field[4]}`)
        if (field[3] === 'button') 
            div(class=`${className}__${field[2]}-box`)
                a(class=`${field[0]} ${className}__${field[0]}` id=`${className}-${field[2]}`) #{field[1]}