//- .className - класс
//- .items - массив элементов 

mixin breadcrumbs(obj)
    ul(class=`${obj.className}`)
        each item, key in obj.items
            +breadcrumbs-item(obj.className, item)



//- .name - значение(имя)
//- .link - ссылка

mixin breadcrumbs-item(cl, i)
    if (i.link) 
        li(class=`${cl}__item`)
            a(href=`${i.link}` class=`${cl}__link`) #{i.name}
    else 
        li(class=`${cl}__item`) #{i.name}
