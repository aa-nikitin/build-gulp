include ./settings/template/_include

-
    var pages = { className: '', items: [
            {name: 'Главная', link: '/main.html'},
            {name: 'Карточка', link: '/card.html'},
            {name: 'Категории', link: '/category.html'},
            {name: 'Типографика (текстовая)', link: '/typography.html'}
        ]
