.popup-order.mfp-hide.mfp-with-anim(id="popup-order")  
    .popup-order__top
        h2.popup-order__head Оставьте заявку  
    .popup-order__descr
    .popup-order__body 
        form.form-page.form-page_border_none.popup-order__form
            +form(poupForm)

.preloader
    - var i = 0;
    .sk-circle-bounce
        while i < 12
            div(class=`sk-child sk-circle-${++i}`)
